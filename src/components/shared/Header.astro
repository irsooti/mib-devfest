---
import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslations, type KnownLocales } from "../../i18n";

const lang = Astro.currentLocale as KnownLocales;
const t = useTranslations(lang);
const homeUrl = getRelativeLocaleUrl(lang, "/");
---

<header class="px-5 pb-5 container m-auto">
  <h1
    class="font-display text-3xl font-black uppercase sm:text-4xl md:text-6xl"
  >
    <a href={homeUrl}>Devfest <span class="text-accent">Pescara</span></a>
  </h1>
  <p class="font-display text-xl md:text-4xl">{t("header.when")}</p>

  <a
    id="main-content"
    target="_blank"
    href="https://www.eventbrite.it/e/devfest-pescara-2025-tickets-1411560167459"
    class="btn btn-primary btn-md lg:btn-lg xl:btn-xl mt-5"
    >{t("header.reserve")}</a
  >
</header>
