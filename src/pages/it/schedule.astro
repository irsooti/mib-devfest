---
import Header from "../../components/shared/Header.astro";
import Seo from "../../components/shared/Seo.astro";
import Layout from "../../layouts/Layout.astro";

const data = await fetch(
  "https://sessionize.com/api/v2/6dnuxqwq/view/GridSmart"
);

const content = await data.text();
---

<Layout lang="it">
  <Seo slot="seo" title="Programma" />
  <Header />
  <main>
    <div class="bg-white mt-8 md:mt-20 2xl:mt-32 py-8 md:py-20 2xl:py-32">
      <div class="container m-auto">
        <h2
          class="text-primary pb-8 md:pb-20 text-center text-3xl md:text-5xl font-display font-black"
        >
          Programma
        </h2>
      </div>
      <div class="text-center" set:html={content} />
    </div>
  </main>
</Layout>
